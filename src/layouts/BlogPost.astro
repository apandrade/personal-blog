---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import LanguageSwitcher from '../components/LanguageSwitcher.astro';
import ShareButtons from '../components/ShareButtons.astro';
import { formatDate } from '../lib/utils';
import type { PostWithAuthor } from '../types';
import '../styles/global.css';

interface Props {
  post: PostWithAuthor;
}

const { post } = Astro.props;
const currentPath = Astro.url.pathname;
const currentLocale = Astro.currentLocale || 'pt';
const fullUrl = new URL(Astro.url.pathname, Astro.site).toString();
---

<!doctype html>
<html lang={currentLocale}>
  <head>
    <BaseHead title={post.title} description={post.excerpt} />
  </head>
  <body>
    <Header currentPath={currentPath}>
      <LanguageSwitcher slot="language-switcher" />
    </Header>
    <main>
      <article class="blog-post">
        <div class="post-header">
          <div class="container">
            <h1 class="post-title">{post.title}</h1>
            <div class="post-meta">
              <div class="author-info">
                <img src={post.author.avatar} alt={post.author.name} class="author-avatar" />
                <div class="author-details">
                  <span class="author-name">{post.author.name}</span>
                  <time datetime={post.publishedAt.toISOString()} class="post-date">
                    {formatDate(post.publishedAt, currentLocale)}
                  </time>
                </div>
              </div>
            </div>
          </div>
        </div>

        {post.coverImage && (
          <div class="post-cover">
            <img src={post.coverImage} alt={post.title} />
          </div>
        )}

        <div class="post-content">
          <div class="container">
            <div class="content">
              <slot />
            </div>

            <ShareButtons url={fullUrl} title={post.title} />
          </div>
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>

<style>
  .blog-post {
    padding-top: 2rem;
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .post-header {
    padding: 2rem 0;
  }

  .post-title {
    font-size: 3rem;
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 2rem 0;
    color: #000;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .author-info {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .author-avatar {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    object-fit: cover;
  }

  .author-details {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .author-name {
    font-weight: 600;
    color: #000;
  }

  .post-date {
    font-size: 0.9rem;
    color: #666;
  }

  .post-cover {
    width: 100%;
    max-height: 500px;
    overflow: hidden;
    margin-bottom: 3rem;
  }

  .post-cover img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .post-content {
    padding: 2rem 0;
  }

  .content {
    font-size: 1.125rem;
    line-height: 1.75;
    color: #333;
  }

  .content :global(h2) {
    font-size: 2rem;
    font-weight: 700;
    margin: 2.5rem 0 1.5rem;
    color: #000;
  }

  .content :global(h3) {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 2rem 0 1rem;
    color: #000;
  }

  .content :global(p) {
    margin-bottom: 1.5rem;
  }

  .content :global(a) {
    color: #000;
    text-decoration: underline;
  }

  .content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 4px;
    margin: 2rem 0;
  }

  @media (max-width: 768px) {
    .post-title {
      font-size: 2rem;
    }

    .content {
      font-size: 1rem;
    }

    .content :global(h2) {
      font-size: 1.5rem;
    }

    .content :global(h3) {
      font-size: 1.25rem;
    }
  }
</style>
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
