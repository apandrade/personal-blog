---
const currentLocale = Astro.currentLocale || 'pt';
const alternateLocale = currentLocale === 'pt' ? 'en' : 'pt';
const currentPath = Astro.url.pathname;

// Remove any existing locale prefix
let pathWithoutLocale = currentPath.replace(/^\/(pt|en)\//, '/').replace(/^\/(pt|en)$/, '/');
if (!pathWithoutLocale.startsWith('/')) {
  pathWithoutLocale = '/' + pathWithoutLocale;
}

// Build alternate path
let alternatePath;
if (alternateLocale === 'en') {
  // Going to English - add /en prefix
  if (pathWithoutLocale === '/sobre') {
    alternatePath = '/en/about';
  } else if (pathWithoutLocale === '/') {
    alternatePath = '/en';
  } else {
    alternatePath = '/en' + pathWithoutLocale;
  }
} else {
  // Going to Portuguese - use routes without prefix
  if (pathWithoutLocale === '/about') {
    alternatePath = '/sobre';
  } else if (pathWithoutLocale === '/' || pathWithoutLocale === '/en') {
    alternatePath = '/';
  } else {
    alternatePath = pathWithoutLocale;
  }
}
---

<div class="language-switcher">
  <a href={alternatePath} class="lang-link" data-locale={alternateLocale}>
    {alternateLocale.toUpperCase()}
  </a>
</div>

<style>
  .language-switcher {
    display: flex;
    align-items: center;
  }

  .lang-link {
    padding: 0.5rem 1rem;
    background: #f5f5f5;
    color: #333;
    text-decoration: none;
    border-radius: 4px;
    font-size: 0.85rem;
    font-weight: 600;
    transition: all 0.2s;
    border: 1px solid #e0e0e0;
  }

  .lang-link:hover {
    background: #000;
    color: #fff;
    border-color: #000;
  }
</style>
